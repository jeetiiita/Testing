package String;

/**
 * @author j.yadav
 *
 */
public class ReverseOfString {

	public static void main(String[] args) {

		reverse("ABCD");
	}

	static void reverse(String input1) {
		if (input1.length() == 0) {
			System.out.print("");
			return;
		}
		reverse(input1.substring(1));
		System.out.print(input1.charAt(0));
	}
}
